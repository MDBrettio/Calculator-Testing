import javax.lang.model.element.ModuleElement;

public class KineticEnergy{

    public static void main(String []args){

        int CalcJoules=1;
//Calculate Joules
        int CalcVelocity=1;
//Calculate Velocity
        int CalcMass=1;

//Calculate Mass

        if(CalcJoules == 1){
            double Mass=45;
//mass
            double Velocity=25;
//Velocity
            double VelSquared=Velocity*Velocity;
//velocity squared
            double e=(.5*Mass)*VelSquared;
            System.out.println("CalcJoules=1, calculating Joules");
            System.out.println("Mass = "+Mass);
            System.out.println("Velocity = "+Velocity);
            System.out.println("Velocity Squared = "+VelSquared);
            System.out.println("Kinetic Energy = "+e+" Joules");
            System.out.println(" ");
        }

        if(CalcVelocity==1){
//This is to find the
//velocity of an item
            double TotalJoules=500;
//total joules to be divided
            double Mass=45;
//mass
            double Velocity=(TotalJoules/.5)/Mass;
//Final Velocity
            System.out.println("CalcVelocity = 1, calculating velocity");
            System.out.println("TotalJoules = "+TotalJoules);
            System.out.println("Mass = "+Mass);
            System.out.println("Velocity = "+Velocity);
            System.out.println(" ");
        }
        if(CalcMass==1){
//This is to find the
//mass of an item
            double TotalJoules=500;
//total joules to be divided
            double Velocity=25;
//velocity
            double VelSquared=Velocity*Velocity;
//velocity squared
            double JouleDivisor=VelSquared*.5 ;
//the divisor to find mass
            double Mass=TotalJoules/JouleDivisor;
//final mass
            System.out.println("CalcMass = 1, calculating mass");
            System.out.println("TotalJoules = "+TotalJoules);
            System.out.println("Velocity = "+Velocity);
            System.out.println("VelSquared = "+VelSquared);
            System.out.println("the JouleDivisor = "+JouleDivisor);
            System.out.println("Mass = "+Mass);

        }
    }
}
